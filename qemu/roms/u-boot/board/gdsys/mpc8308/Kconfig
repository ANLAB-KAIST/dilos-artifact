config GDSYS_LEGACY_OSD_CMDS
	bool
	help
	  Use the 'osdw', 'osdp', and 'osdsize' legacy commands required by
	  gdsys devices.

if TARGET_HRCON

config SYS_BOARD
	default "mpc8308"

config SYS_VENDOR
	default "gdsys"

config SYS_CONFIG_NAME
	default "hrcon"

config GDSYS_LEGACY_OSD_CMDS
	default y

endif

if TARGET_STRIDER

config SYS_BOARD
	default "mpc8308"

config SYS_VENDOR
	default "gdsys"

config SYS_CONFIG_NAME
	default "strider"

config GDSYS_LEGACY_OSD_CMDS
	default y
endif

config CMD_IOLOOP
	bool "Enable 'ioloop' and 'ioreflect' commands"
	help
	  These commands provide FPGA tests.
